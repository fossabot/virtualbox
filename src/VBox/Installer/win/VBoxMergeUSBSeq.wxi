<Include xmlns="http://wixtoolset.org/schemas/v4/wxs">

    <!-- VBoxUSB.sys uninstallation.
         Must also happen on upgrades *before* VBoxSUP gets uninstalled. -->
    <Custom Action="ca_VBoxUSBDevDrvUninstParms" Before="ca_VBoxUSBDevDrvUninst" />
    <Custom Action="ca_VBoxUSBDevDrvUninst" Before="InstallFiles" />

    <!-- VBoxUSB.sys installation. -->
    <Custom Action="ca_VBoxUSBDevDrvInstParms" Before="ca_VBoxUSBDevDrvInst"
            Condition="(NOT REMOVE) AND (&amp;VBoxUSB=3)" />
    <Custom Action="ca_VBoxUSBDevDrvInst" After="InstallFiles"
            Condition="(NOT REMOVE) AND (&amp;VBoxUSB=3)" />

    <!-- VBoxUSBMon.sys uninstallation.
         Must also happen on upgrades *before* VBoxSUP gets uninstalled. -->
    <Custom Action="ca_VBoxUSBMonDrvUninstParms" Before="ca_VBoxUSBMonDrvUninst" />
    <Custom Action="ca_VBoxUSBMonDrvUninst" After="ca_VBoxUSBDevDrvUninst" />

    <!-- VBoxUSBMon.sys installation. -->
    <Custom Action="ca_VBoxUSBMonDrvInstParms" Before="ca_VBoxUSBMonDrvInst"
            Condition="(NOT REMOVE) AND (&amp;VBoxUSB=3)" />
    <Custom Action="ca_VBoxUSBMonDrvInst" After="InstallFiles"
            Condition="(NOT REMOVE) AND (&amp;VBoxUSB=3)" />

    <!-- Start VBoxUSBMon.sys after installation. -->
    <Custom Action="ca_VBoxUSBMonDrvStartParms" Before="ca_VBoxUSBMonDrvStart"
            Condition="(NOT REMOVE) AND (&amp;VBoxUSB=3)" />
    <Custom Action="ca_VBoxUSBMonDrvStart" After="ca_VBoxUSBMonDrvInst"
            Condition="(NOT REMOVE) AND (&amp;VBoxUSB=3)" />

</Include>
